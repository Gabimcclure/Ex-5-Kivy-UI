<MainScreen>:
    name: 'main'
    on_enter:root.start_joy_thread()
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.40
        color: 4, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: 'test2'
        size: 100, 100
        x: root.width * 0.15
        y: root.height * 0.45
        color: 2, 0, 7, 1
        on_press: root.pressed()

    DPEAButton:
        id: counter
        text: 'Counter ' + root.string_value
        size: 250, 100
        x: root.width * 0.65
        y: root.height * 0.15
        color: 0, 1, 0, 1
        on_press: root.pressed2()

    DPEAButton:
        id: btn
        text: 'On' if btn.state == "normal" else "Off"
        size: 100, 100
        x: root.width * 0.15
        y: root.height * 0.15
        color: 1, 0, 0, 1

    DPEAButton:
        id: motor_btn
        text: 'Motor'
        size: 150, 100
        x: root.width * 0.10
        y: root.height * 0.75
        color: 0, 0, 1, 1


    Label:
        text: "Motor On" if motor_btn.state == "normal" else "Motor Off"
        size: 200, 200
        x: root.width * 0.30
        y: root.height * 0.30
        color: 0, 0, 1, 1

    Slider:
        id: slider
        text: 'Position'
        size_hint: None, None
        min: 0
        max: 100
        x: root.width * 0.75
        y: root.height * 0.60
        step: 1
        orientation: 'horizontal'

    Label:
        text: str(slider.value)
        size: 200, 200
        x: root.width * 0.30
        y: root.height * 0.25
        color: 2, 0, 8, 1

    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.45
        y: root.height * 0.65
        on_press: root.pressed()

    ImageButton:
        id: logo_image_button
        source: "/home/gabimcclure/Documents/Ex-5-Kivy-UI/Becky.jpg"
        size: 200, 200
        x: root.width * 0.37
        y: root.height * 0.10
        on_press: root.image_screen()

    Label:
        id: joy_label_x
        text: "X: " + str(root.joy_x_val)
        size: 200, 200
        x: root.width * 0.50
        y: root.height * 0.08
        color: 0, 0, 0, 1

    Label:
        id: joy_label_y
        text: "Y: " + str(root.joy_y_val)
        size: 200, 200
        x: root.width * 0.001
        y: root.height * 0.5
        color: 0, 0, 0, 1

    Label:
        id: jbuttons
        text: "Button Pressed: " + str(root.joy_button)
        size: 200, 200
        x: root.width * 0.001
        y: root.height * 0.45
        color: 0, 0, 0, 1

<ImageScreen>
    name: 'image'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        text: 'Go Back'
        font_size: 10
        size: 100, 50
        x: root.width * .85
        y: root.height * .9
        color: 0, 0, 0, 1
        on_press: root.transition_back()

    ImageButton:
        id: animation
        source: "/home/gabimcclure/Documents/Ex-5-Kivy-UI/Quokka_Sam-West.jpg"
        size: 300, 150
        x: root.width * 0.60
        y: root.height * 0.05
        on_press: root.animation()

    Label:
        id: jbuttons
        text: "The Button Pressed: "
        size: 200, 200
        x: root.width * 0.30
        y: root.height * 0.25
        color: 2, 0, 8, 1